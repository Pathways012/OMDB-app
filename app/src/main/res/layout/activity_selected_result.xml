<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_gravity="top"
    android:layout_weight="1"
    android:weightSum="2">

    <ImageView
        android:id="@+id/moviePoster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/moviePoster"
        android:layout_weight="1"
        android:scaleType="fitCenter"

       />

    <TextView
        android:id="@+id/movieInfo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_weight="1"
        android:padding="5dp"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:weightSum="5">

        <TextView
            android:id="@+id/movieInfo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="5dp"
            android:layout_weight="4"
            />

        <Button
            android:id="@+id/addToWatchlistButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/addToWatchlistButtonText"
            android:textSize="25sp"
            android:onClick="addToWatchlist"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>